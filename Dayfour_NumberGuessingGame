import random
best_score = 1000000
while True:
    num_guess = 1
    #Track guesses
    number = random.randint(1, 20)
    #Find random number
    guess = int(input("Welcome! Guess the integer from 1 - 20:"))
    #Ask for guess
    #Find if it's too low or high, ask for re-guess
    while guess != number:
        if guess > number:
            guess = int(input("Too high! Guess again:"))
            num_guess = num_guess + 1
        elif guess < number:
            guess = int(input("Too low! Guess again:"))
            num_guess = num_guess + 1
    if num_guess < best_score:
        best_score = num_guess
    print("Correct! You got it in", num_guess, "tries.", "Best score so far: ", best_score, "guesses.")
    again = input("Play again? (yes/no): ").lower()
    if again != "yes":
        print("Aight, thanks for playing!")
        break
